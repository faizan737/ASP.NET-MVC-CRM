@model ASP.NET_CRM_System_Development.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}
<div class="card border-danger my-4">
    <div class="card-header bg-danger text-white">
        <h2 class="my-4 text-center">@ViewBag.Title</h2>
    </div>
    <div class="card-body">
        <p class="text-danger text-center font-weight-bold">
            Are you sure you want to delete this customer? This action cannot be undone.
        </p>
        <hr />
        <h5 class="card-title">Customer Details:</h5>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
            <div class="col-md-6">
                <p><strong>Phone:</strong> @Model.Phone</p>
            </div>
        </div>
    </div>
    
     <div class="card-footer text-center">
         @using (Html.BeginForm("Delete", "Customer", FormMethod.Post, new { @class = "form" }))
         {
             @Html.AntiForgeryToken()
             @Html.HiddenFor(model => model.Id) //Hide id field


             <button type="submit" class="btn btn-danger mx-2">
             <i class="fa fa-trash"></i>Delete
             </button>
             @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary mx-2" })
         }
     </div>
 </div>
